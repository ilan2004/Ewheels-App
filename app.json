{
  "expo": {
    "name": "Ewheels App",
    "slug": "EvWheelsApp",
    "description": "Professional EV service and repair management system for technicians, front desk staff, and managers. Streamline job cards, battery management, customer records, and financial tracking.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ewheels-logo app.png",
    "scheme": "evwheelsapp",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record voice memos for tickets and documentation.",
        "NSCameraUsageDescription": "This app needs access to your camera to capture photos for job documentation and service records.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to attach images to service tickets and reports."
      },
      "bundleIdentifier": "com.ilan20.EvWheelsApp"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/ewheels-logo app.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.REQUEST_INSTALL_PACKAGES"
      ],
      "package": "com.ilan20.EvWheelsApp",
      "versionCode": 1
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./ewheels logo splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-audio",
      "expo-asset",
      "./plugins/withAndroidSigning"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7f39e12d-6410-401b-9929-1a2df5061f61"
      }
    }
  }
}